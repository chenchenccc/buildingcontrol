<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<!-- 应用构建模块-->
    <package name="system" namespace="/" extends="default">
		<!-- 登陆 -->
		<action name="login" method="login" class="loginAction">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
			<result name="LOGIN_SUCCESS">/html/index.jsp</result>
		    <result name="LOGIN_FAILE" type="dispatcher">/login.jsp</result>
		</action>
		
		
		<!-- User实体Bean -->
		<action name="user_*" method="{1}" class="aliasUserAction">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		<result name="LIST_SUCCESS" type="dispatcher">/platform/userList.jsp</result>
		<result name="VIEW_SUCCESS" type="dispatcher">/platform/userInfo.jsp</result>
		<result name="EDIT_SUCCESS" type="dispatcher">/platform/userInfo.jsp</result>
		<result name="ADD_SUCCESS" type="dispatcher">/platform/userInfo.jsp</result>
		</action> 
		
		
		<!-- Building实体Bean -->
		<action name="building_*" method="{1}" class="aliasBuildingAction">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		<result name="LIST_SUCCESS" type="dispatcher">/platform/buildingList.jsp</result>
		<result name="VIEW_SUCCESS" type="dispatcher">/platform/buildingInfo.jsp</result>
		<result name="EDIT_SUCCESS" type="dispatcher">/platform/buildingInfo.jsp</result>
		<result name="ADD_SUCCESS" type="dispatcher">/platform/buildingInfo.jsp</result>
		</action> 
		
		
		<!-- Device实体Bean -->
		<action name="device_*" method="{1}" class="aliasDeviceAction">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		<result name="LIST_SUCCESS" type="dispatcher">/platform/deviceList.jsp</result>
		<result name="VIEW_SUCCESS" type="dispatcher">/platform/deviceInfo.jsp</result>
		<result name="EDIT_SUCCESS" type="dispatcher">/platform/deviceInfo.jsp</result>
		<result name="ADD_SUCCESS" type="dispatcher">/platform/deviceInfo.jsp</result>
		</action> 
		
		<!-- Schedule实体Bean -->
		<action name="schedule_*" method="{1}" class="aliasScheduleAction">
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		<result name="LIST_SUCCESS" type="dispatcher">/platform/scheduleList.jsp</result>
		<result name="VIEW_SUCCESS" type="dispatcher">/platform/scheduleInfo.jsp</result>
		<result name="EDIT_SUCCESS" type="dispatcher">/platform/scheduleInfo.jsp</result>
		<result name="ADD_SUCCESS" type="dispatcher">/platform/scheduleInfo.jsp</result>
		</action>  
    </package>
</struts>
